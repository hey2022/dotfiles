{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "cpu",
    "memory",
    "wireplumber",
    "backlight",
    "battery",
    "tray",
    "clock",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": " {icon} ",
    "format-icons": {
      "default": ""
    }
  },
  "hyprland/window": {
    "format": "{}",
    "rewrite": {
      "(?:\\[Sidebery\\] )?(.*) — Mozilla Firefox": " $1"
    },
    "separate-outputs": true
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "player-icons": {
      "default": "🎵"
    },
    "status-icons": {
      "paused": "⏸"
    },
    "dynamic-order": ["title", "artist", "album"]
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "format": "{:%T} ",
    "interval": 1,
    "tooltip": true,
    "tooltip-format": "{:%Y-%m-%d}"
  },
  "cpu": {
    "interval": 10,
    "format": "{}% "
  },
  "memory": {
    "format": "{}% "
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "battery": {
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "",
    "on-click": "pwvucontrol",
    "format-icons": ["", "", ""]
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "",
      "none": "",
      "dnd-notification": "",
      "dnd-none": "",
      "inhibited-notification": "",
      "inhibited-none": "",
      "dnd-inhibited-notification": "",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
