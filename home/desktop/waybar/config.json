{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "clock",
    "cpu",
    "memory",
    "wireplumber",
    "backlight",
    "battery",
    "tray"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": " {icon} ",
    "format-icons": {
      "default": ""
    }
  },
  "hyprland/window": {
    "format": "{}",
    "rewrite": {
      "(?:\\[Sidebery\\] )?(.*) — Mozilla Firefox": " $1"
    },
    "separate-outputs": true
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "player-icons": {
      "default": "🎵"
    },
    "status-icons": {
      "paused": "⏸"
    },
    "dynamic-order": ["title", "artist", "album"]
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "tooltip": false,
    "interval": 60,
    "format": "{:%H:%M} "
  },
  "cpu": {
    "interval": 10,
    "format": "{}% "
  },
  "memory": {
    "format": "{}% "
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "battery": {
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "",
    "on-click": "pwvucontrol",
    "format-icons": ["", "", ""]
  }
}
