{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "wireplumber",
    "backlight",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "tray",
    "clock",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": " {icon} ",
    "format-icons": {
      "default": ""
    }
  },
  "hyprland/window": {
    "format": "{class}",
    "separate-outputs": true
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "player-icons": {
      "default": "🎵"
    },
    "status-icons": {
      "paused": "⏸"
    },
    "dynamic-order": ["title", "artist"]
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "format": "{:%H:%M} ",
    "format-alt": "{:%T} ",
    "interval": 1,
    "tooltip": true,
    "tooltip-format": "{:%Y-%m-%d}"
  },
  "cpu": {
    "format": "{usage}% ",
    "states": {
      "low": 0,
      "medium": 25,
      "high": 50,
      "critical": 75
    }
  },
  "memory": {
    "format": "{}% ",
    "states": {
      "low": 0,
      "medium": 50,
      "high": 75,
      "critical": 95
    }
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "", "", "", ""],
    "tooltip": false
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "battery": {
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% 󰂄",
    "format-icons": ["", "", "", "", ""]
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "",
    "on-click": "pwvucontrol",
    "format-icons": ["", "", ""]
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "",
      "none": "",
      "dnd-notification": "",
      "dnd-none": "",
      "inhibited-notification": "",
      "inhibited-none": "",
      "dnd-inhibited-notification": "",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
