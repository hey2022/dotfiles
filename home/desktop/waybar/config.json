{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "group/controls",
    "group/hardware",
    "tray",
    "clock",
    "custom/notification"
  ],
  "group/controls": {
    "orientation": "inherit",
    "modules": ["wireplumber", "backlight"]
  },
  "group/hardware": {
    "orientation": "inherit",
    "modules": ["cpu", "memory", "temperature", "battery"]
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": " {icon} ",
    "format-icons": {
      "default": "î®´"
    }
  },
  "hyprland/window": {
    "format": "{class}",
    "separate-outputs": true
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "player-icons": {
      "default": "ğŸµ"
    },
    "status-icons": {
      "paused": "â¸"
    },
    "dynamic-order": ["title", "artist"],
    "ignored-players": ["firefox"]
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "interval": 1,
    "format": "{:%H:%M} ï€—",
    "format-alt": "{:%Y-%m-%d %H:%M:%S} ï€—",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "{usage}% ï‹›",
    "states": {
      "low": 0,
      "medium": 25,
      "high": 50,
      "critical": 75
    }
  },
  "memory": {
    "format": "{}% ïƒ‰",
    "states": {
      "low": 0,
      "medium": 50,
      "high": 75,
      "critical": 95
    }
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{temperatureC}Â°C {icon}",
    "format-icons": ["ï‹‹", "ï‹Š", "ï‹‰", "ï‹ˆ", "ï‹ˆ"],
    "tooltip": false
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
  },
  "battery": {
    "states": {
      "warning": 50,
      "critical": 20
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ó°‚„",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "î»¨",
    "on-click": "pwvucontrol",
    "format-icons": ["ï€¦", "ï€§", "ï€¨"]
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "ï‚¢ï‘„",
      "none": "ï‚¢",
      "dnd-notification": "ï‡·ï‘„",
      "dnd-none": "ï‡·",
      "inhibited-notification": "ï‚¢ï‘„",
      "inhibited-none": "ï‚¢",
      "dnd-inhibited-notification": "ï‡·ï‘„",
      "dnd-inhibited-none": "ï‡·"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
